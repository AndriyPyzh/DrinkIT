@model DrinkIt.Models.RegisterViewModel

<div class="d-flex justify-content-center">
    <div style="width: 300px">
        <div class="text-center mb-1">
            <img src="\Content\images\logoDrinkIT.png" alt="DrinkLogo" width="85%">
            <h3 class="mt-3">Sign Up</h3>
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()
            @Html.LabelFor(m => m.Email)
            <div class="input-form">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
            </div>
            @Html.LabelFor(m => m.Password)
            <div class="input-form">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
            </div>
            @Html.LabelFor(m => m.ConfirmPassword)
            <div class="input-form">
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
            </div>

            <div class="input-form-button">
                <input type="submit" class=" btn-primary buttonAdd" style="background: #63DAFB; color: black" value="Sign Up">
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}