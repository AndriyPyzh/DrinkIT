@using Microsoft.AspNet.Identity
<div class="container">
    <div class="row mt-3 nav border-bottom mb-3 ">
        <div class="col mt-2 mb-2">
            <img src="../../Content/images/logoDrinkIT.png" alt="logoDrinkIT" width="70%"></img>
        </div>
        <div class="col-7">
            @if (Request.IsAuthenticated)
            {
                <ul class="nav col-12 col-md-auto mb-2 mb-md-0 p-2 text-muted" style="font-size: 20px">
                    <li class="nav-item px-2 link-secondary mar mx-lg-1 text-muted">
                        @Html.ActionLink("Home", "Index", "Home", null, new {@class = "nav-link text-dark"})
                    </li>
                    <li class="nav-item px-2 link-secondary mar mx-lg-1">
                        @Html.ActionLink("Add Drink", "Index", "Home", null, new {@class = "nav-link text-dark"})
                    </li>
                    <li class="nav-item px-2 link-secondary mar mx-lg-1">
                        @Html.ActionLink("Statistics", "Index", "Home", null, new {@class = "nav-link text-dark"})
                    </li>
                    <li class="nav-item px-2 link-secondary mar mx-lg-1">
                        @Html.ActionLink("Settings", "Index", "Home", null, new {@class = "nav-link text-dark"})
                    </li>
                </ul>
            }
        </div>
        <div class="col-3">
                @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>